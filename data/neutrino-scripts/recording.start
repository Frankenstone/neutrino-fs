#!/bin/sh
# RAM-Cleaner stoppen
if [ "$(grep -i "RAMCLEAN=" /var/etc/msettings.conf | cut -d "=" -f 2)" != "0" -a ! -e /tmp/.recording ]; then
	sync
	echo "3" > /proc/sys/vm/drop_caches
	touch /tmp/.ram_cleaner_pause
fi
touch /tmp/.recording

echo -e "\033[01;32mAufnahme wird gestartet......\033[00m"
exit 0
